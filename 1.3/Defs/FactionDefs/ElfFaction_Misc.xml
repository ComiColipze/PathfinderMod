<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<FactionDef ParentName="FactionBase">
		<defName>PF2_ElfFaction</defName>
		<label>elven enclave</label>
		<categoryTag>Tribal</categoryTag>
		<description>This isolationist collection of settlements are mostly populated by elves. Their culture and identity is in a long, but depressing decline, and to prevent more loss, they isolated themselves in tightly-knit enclaves. Those elves who are in diaspora, settling down on villages of different races, are called forlorn, or abandoned elves.\n\nWhile they prioritize conflicts and commerce in their territory over other civilizations, adopting a loyalist mindset, elves in the enclave are mostly generous with individuals of other races or nations, despising slavery and imperialism. The enclave is also extremely advocato on maintaining nature on its immaculate state, not abusing the florests they settle and not hunt animals for sport.</description>
		<pawnSingular>liegeman</pawnSingular>
		<pawnsPlural>liegemen</pawnsPlural>
		<listOrderPriority>20</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<colorSpectrum>
			<li>(0, 102, 51)</li>
			<li>(0, 255, 168)</li>
		</colorSpectrum>
		<fixedLeaderKinds>
			<li>PF2_ElfFaction_King</li>
		</fixedLeaderKinds>
		<canMakeRandomly>true</canMakeRandomly>
		<canStageAttacks>true</canStageAttacks>
		<factionIconPath>World/WorldObjects/Expanding/ElfFaction</factionIconPath>
		<geneticVariance>0.1</geneticVariance>
		<techLevel>Medieval</techLevel>
		<factionNameMaker>PF2_NamerFaction</factionNameMaker>
		<settlementNameMaker>NamerPersonElfMale</settlementNameMaker>
		<allowedCultures><li>Kyonan</li></allowedCultures>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Loyalist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">NaturePrimacy</li>
		</requiredMemes>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Rancher</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Collectivist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HumanPrimacy</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_Xenophilia</li>
		</disallowedMemes>
		<disallowedPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">IdeoDiversity_Exalted</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">IdeoDiversity_Respected</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">BodyMod_Approved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator_Preferred</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">NeuralSupercharge_Preferred</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">AgeReversal_Demanded</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Acceptable</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Honorable</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Required</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Execution_RespectedIfGuilty</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Execution_DontCare</li>
		</disallowedPrecepts>
		<structureMemeWeights>
			<Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Animist>
			<Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">4</Structure_TheistEmbodied>
			<Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">4</Structure_TheistAbstract>
			<Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
		</structureMemeWeights>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>50</configurationListOrderPriority>
		<backstoryFilters>
			<li>
				<categories>
					<li>Tribal</li>
				</categories>
			</li>
		</backstoryFilters>
		<leaderTitle>king</leaderTitle>
		<caravanTraderKinds>
			<li>Caravan_Neolithic_BulkGoods</li>
			<li>Caravan_Neolithic_WarMerchant</li>
			<li>Caravan_Neolithic_ShamanMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Neolithic_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Neolithic_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<raidLootMaker>TribeRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, melee with ranged mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<PF2_ElfFaction_Peasant>20</PF2_ElfFaction_Peasant>
					<PF2_ElfFaction_Squire>40</PF2_ElfFaction_Squire>
					<PF2_ElfFaction_Footsoldier>30</PF2_ElfFaction_Footsoldier>
					<PF2_ElfFaction_Archer>50</PF2_ElfFaction_Archer>
					<PF2_ElfFaction_Knight>20</PF2_ElfFaction_Knight>
				</options>
			</li>
			<li>
				<!-- Normal fights, ranged only -->
				<kindDef>Combat</kindDef>
				<commonality>30</commonality>
				<options>
					<PF2_ElfFaction_Archer>100</PF2_ElfFaction_Archer>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
					<PF2_ElfFaction_Squire>30</PF2_ElfFaction_Squire>
					<PF2_ElfFaction_Footsoldier>30</PF2_ElfFaction_Footsoldier>
					<PF2_ElfFaction_Archer>40</PF2_ElfFaction_Archer>
					<PF2_ElfFaction_Knight>20</PF2_ElfFaction_Knight>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<PF2_ElfFaction_Merchant>1</PF2_ElfFaction_Merchant>
				</traders>
				<carriers>
					<Muffalo>6</Muffalo>
					<Dromedary>5</Dromedary>
					<Alpaca>2.5</Alpaca>
					<Elephant>2</Elephant>
				</carriers>
				<guards>
					<PF2_ElfFaction_Squire>30</PF2_ElfFaction_Squire>
					<PF2_ElfFaction_Footsoldier>30</PF2_ElfFaction_Footsoldier>
					<PF2_ElfFaction_Archer>40</PF2_ElfFaction_Archer>
					<PF2_ElfFaction_Knight>10</PF2_ElfFaction_Knight>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<PF2_ElfFaction_Peasant>30</PF2_ElfFaction_Peasant>
					<PF2_ElfFaction_Squire>30</PF2_ElfFaction_Squire>
					<PF2_ElfFaction_Footsoldier>30</PF2_ElfFaction_Footsoldier>
					<PF2_ElfFaction_Archer>50</PF2_ElfFaction_Archer>
					<PF2_ElfFaction_Knight>25</PF2_ElfFaction_Knight>
					<PF2_ElfFaction_King>60</PF2_ElfFaction_King>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Miners</kindDef>
				<commonality>1</commonality>
				<options>
					<PF2_ElfFaction_Miner>1</PF2_ElfFaction_Miner>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Hunters</kindDef>
				<commonality>1</commonality>
				<options>
					<PF2_ElfFaction_Hunter>1</PF2_ElfFaction_Hunter>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Loggers</kindDef>
				<commonality>1</commonality>
				<options>
					<PF2_ElfFaction_Logger>1</PF2_ElfFaction_Logger>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Farmers</kindDef>
				<commonality>1</commonality>
				<options>
					<PF2_ElfFaction_Farmer>1</PF2_ElfFaction_Farmer>
				</options>
			</li>
		</pawnGroupMakers>
	</FactionDef>
	
</Defs>