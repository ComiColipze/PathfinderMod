<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<FactionDef ParentName="FactionBase">
		<defName>PF2_DrowFaction</defName>
		<label>drow enclave</label>
		<categoryTag>Tribal</categoryTag>
		<description>This isolationist collection of settlements are mostly populated by drow. Their culture and identity is in a long, but depressing decline, and to prevent more loss, they isolated themselves in tightly-knit enclaves.\n\nDifferent from their cousin elves, drow enclaves are decadent, resorting to kidnap and enslave other races to do their work. Its supremacist culture makes them natural enemies to everyone; you will not be able to ally with them!</description>
		<pawnSingular>liegeman</pawnSingular>
		<pawnsPlural>liegemen</pawnsPlural>
		<listOrderPriority>20</listOrderPriority>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<startingCountAtWorldCreation>0</startingCountAtWorldCreation>
		<colorSpectrum>
			<li>(153, 102, 153)</li>
			<li>(212, 41, 212)</li>
		</colorSpectrum>
		<fixedLeaderKinds>
			<li>PF2_DrowFaction_Matriarch</li>
		</fixedLeaderKinds>
		<canMakeRandomly>true</canMakeRandomly>
		<canStageAttacks>true</canStageAttacks>
		<factionIconPath>World/WorldObjects/Expanding/DrowFaction</factionIconPath>
		<permanentEnemy>true</permanentEnemy>
		<geneticVariance>0.1</geneticVariance>
		<techLevel>Medieval</techLevel>
		<factionNameMaker>PF2_NamerFactionDrow</factionNameMaker>
		<settlementNameMaker>PF2_NamerSettlementDrow</settlementNameMaker>
		<allowedCultures><li>PF2_Sekaminite</li></allowedCultures>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">FemaleSupremacy</li>
		</requiredMemes>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Rancher</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Collectivist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">NaturePrimacy</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_Xenophilia</li>
		</disallowedMemes>
		<disallowedPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">IdeoDiversity_Exalted</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">IdeoDiversity_Respected</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">BodyMod_Approved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator_Preferred</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">NeuralSupercharge_Preferred</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">AgeReversal_Demanded</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienDating_Acceptable</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienDating_Preferred</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienDating_Honorable</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienSlavery_Abhorrent</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienSlavery_Horrible</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienSlavery_Disapproved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienSlavery_Acceptable</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienRaces_Respected</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">HAR_AlienRaces_Exalted</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Abhorrent</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Horrible</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Disapproved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Slavery_Acceptable</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Abhorrent</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Execution_Horrible</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Execution_HorribleIfInnocent</li>
		</disallowedPrecepts>
		<structureMemeWeights>
			<Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistEmbodied>
			<Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistAbstract>
			<PF2_Structure_OriginInnerSea MayRequire="Ludeon.RimWorld.Ideology">2</PF2_Structure_OriginInnerSea>
			<Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
			<Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
			<Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginChristian>
			<Structure_OriginIslamic MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginIslamic>
			<Structure_OriginHindu MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginHindu>
			<Structure_OriginBuddhist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginBuddhist>
		</structureMemeWeights>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>90</configurationListOrderPriority>
		<backstoryFilters>
			<li>
				<categories>
					<li>Tribal</li>
					<li>Elven</li>
				</categories>
			</li>
		</backstoryFilters>
		<leaderTitle>matriarch</leaderTitle>
		<caravanTraderKinds>
			<li>Caravan_Neolithic_BulkGoods</li>
			<li>Caravan_Neolithic_WarMerchant</li>
			<li>Caravan_Neolithic_ShamanMerchant</li>
		</caravanTraderKinds>
		<visitorTraderKinds>
			<li>Visitor_Neolithic_Standard</li>
		</visitorTraderKinds>
		<baseTraderKinds>
			<li>Base_Neolithic_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<raidCommonalityFromPointsCurve>
			<points>
				<li>(0, 1)</li>
			</points>
		</raidCommonalityFromPointsCurve>
		<raidLootMaker>TribeRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(800, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, melee with ranged mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<PF2_DrowFaction_Peasant>20</PF2_DrowFaction_Peasant>
					<PF2_DrowFaction_Squire>40</PF2_DrowFaction_Squire>
					<PF2_DrowFaction_Footsoldier>30</PF2_DrowFaction_Footsoldier>
					<PF2_DrowFaction_Archer>50</PF2_DrowFaction_Archer>
					<PF2_DrowFaction_Knight>20</PF2_DrowFaction_Knight>
				</options>
			</li>
			<li>
				<!-- Normal fights, ranged only -->
				<kindDef>Combat</kindDef>
				<commonality>30</commonality>
				<options>
					<PF2_DrowFaction_Archer>100</PF2_DrowFaction_Archer>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
					<PF2_DrowFaction_Squire>30</PF2_DrowFaction_Squire>
					<PF2_DrowFaction_Footsoldier>30</PF2_DrowFaction_Footsoldier>
					<PF2_DrowFaction_Archer>40</PF2_DrowFaction_Archer>
					<PF2_DrowFaction_Knight>20</PF2_DrowFaction_Knight>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<PF2_DrowFaction_Merchant>1</PF2_DrowFaction_Merchant>
				</traders>
				<carriers>
					<Muffalo>6</Muffalo>
					<Dromedary>5</Dromedary>
					<Alpaca>2.5</Alpaca>
					<Elephant>2</Elephant>
				</carriers>
				<guards>
					<PF2_DrowFaction_Squire>30</PF2_DrowFaction_Squire>
					<PF2_DrowFaction_Footsoldier>30</PF2_DrowFaction_Footsoldier>
					<PF2_DrowFaction_Archer>40</PF2_DrowFaction_Archer>
					<PF2_DrowFaction_Knight>10</PF2_DrowFaction_Knight>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<PF2_DrowFaction_Peasant>30</PF2_DrowFaction_Peasant>
					<PF2_DrowFaction_Squire>30</PF2_DrowFaction_Squire>
					<PF2_DrowFaction_Footsoldier>30</PF2_DrowFaction_Footsoldier>
					<PF2_DrowFaction_Archer>50</PF2_DrowFaction_Archer>
					<PF2_DrowFaction_Knight>25</PF2_DrowFaction_Knight>
					<PF2_DrowFaction_Matriarch>60</PF2_DrowFaction_Matriarch>
				</options>
			</li>
		</pawnGroupMakers>
		<modExtensions>
			<li Class="VFECore.FactionDefExtension">
				<allowedBiomes>
					<li>AridShrubland</li>
					<li>Desert</li>
					<li>BorealForest</li>
					<li>Tundra</li>
					<li>TemperateForest</li>
					<li>TemperateSwamp</li>
					<li>TropicalRainforest</li>
					<li>TropicalSwamp</li>
				</allowedBiomes>
			</li>
		</modExtensions>
	</FactionDef>
	
</Defs>