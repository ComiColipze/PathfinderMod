<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<PawnKindDef Name="DrowPawnKindBase" Abstract="True">
		<race>PF2_Drow</race>
		<defaultFactionType>PF2_DrowFaction</defaultFactionType>
		<maxGenerationAge>650</maxGenerationAge>
		<chemicalAddictionChance>0.05</chemicalAddictionChance>
		<invNutrition>2.55</invNutrition>
		<invFoodDef>Pemmican</invFoodDef>
		<apparelTags>
			<li>MedievalBasic</li>
		</apparelTags>
	</PawnKindDef>

    <!-- Poverty Tier - Peasant -->
    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Peasant</defName>
        <label>drow peasant</label>
        <combatPower>30</combatPower>
        <chemicalAddictionChance>0.10</chemicalAddictionChance>
        <invNutrition>0</invNutrition>
        <itemQuality>Poor</itemQuality>
		<isFighter>false</isFighter>
        <gearHealthRange>
            <min>0.2</min>
            <max>1.1</max>
        </gearHealthRange>
        <apparelMoney>
            <min>50</min>
            <max>125</max>
        </apparelMoney>
        <apparelTags>
            <li>Neolithic</li>
        </apparelTags>
        <weaponMoney>
            <min>90</min>
            <max>150</max>
        </weaponMoney>
        <weaponTags>
            <li>NeolithicMeleeBasic</li>
        </weaponTags>
        <techHediffsMoney>
            <min>50</min>
            <max>50</max>
        </techHediffsMoney>
        <techHediffsTags>
            <li>Poor</li>
        </techHediffsTags>
        <techHediffsChance>0.15</techHediffsChance>
		<initialWillRange>1~2</initialWillRange>
		<initialResistanceRange>3~8</initialResistanceRange>
    </PawnKindDef>

	<PawnKindDef ParentName="DrowPawnKindBase">
		<defName>PF2_DrowFaction_Hunter</defName>
		<label>drow hunter</label>
		<combatPower>55</combatPower>
		<backstoryFiltersOverride>
			<li>
				<categoriesAdulthood>
					<li>TribalHunter</li>
				</categoriesAdulthood>
			</li>
		</backstoryFiltersOverride>
        <gearHealthRange>
            <min>0.5</min>
            <max>1.8</max>
        </gearHealthRange>
        <apparelMoney>
            <min>200</min>
            <max>300</max>
        </apparelMoney>
		<apparelRequired>
			<li>Apparel_HatHood</li>
		</apparelRequired>
        <weaponMoney>
            <min>100</min>
            <max>100</max>
        </weaponMoney>
		<weaponTags>
			<li>NeolithicRangedDecent</li>
		</weaponTags>
		<disallowedTraits>
			<li>Brawler</li>
		</disallowedTraits>
		<initialWillRange>3~8</initialWillRange>
		<initialResistanceRange>10~16</initialResistanceRange>
	</PawnKindDef>

    <!-- Low-Tier - Merchant, Squire -->
    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Merchant</defName>
        <label>drow merchant</label>
        <combatPower>35</combatPower>
        <trader>true</trader>
        <isFighter>false</isFighter>
        <gearHealthRange>
            <min>1</min>
            <max>1</max>
        </gearHealthRange>
        <apparelMoney>
            <min>300</min>
            <max>500</max>
        </apparelMoney>
        <weaponMoney>
            <min>100</min>
            <max>150</max>
        </weaponMoney>
        <weaponTags>
            <li>NeolithicMeleeBasic</li>
        </weaponTags>
		<initialWillRange>1~3</initialWillRange>
		<initialResistanceRange>5~9</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Squire</defName>
        <label>drow squire</label>
        <combatPower>45</combatPower>
        <canBeSapper>true</canBeSapper>
        <gearHealthRange>
            <min>0.5</min>
            <max>1.8</max>
        </gearHealthRange>
        <apparelMoney>
            <min>300</min>
            <max>500</max>
        </apparelMoney>
        <apparelTags>
            <li>MedievalArmorBasic</li>
        </apparelTags>
        <weaponMoney>
            <min>100</min>
            <max>150</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
        </weaponTags>
		<initialWillRange>1~3</initialWillRange>
		<initialResistanceRange>5~9</initialResistanceRange>
    </PawnKindDef>

    <!-- Mid-tier - footsoldier, bowman -->
    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Footsoldier</defName>
        <label>drow footsoldier</label>
        <combatPower>65</combatPower>
        <canBeSapper>true</canBeSapper>
        <gearHealthRange>
            <min>0.8</min>
            <max>1.8</max>
        </gearHealthRange>
        <apparelMoney>
            <min>700</min>
            <max>1000</max>
        </apparelMoney>
        <apparelTags>
            <li>MedievalMilitary</li>
        </apparelTags>
        <weaponMoney>
            <min>150</min>
            <max>150</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
        </weaponTags>
		<initialWillRange>2~4</initialWillRange>
		<initialResistanceRange>14~22</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Archer</defName>
        <label>drow archer</label>
        <combatPower>65</combatPower>
        <gearHealthRange>
            <min>0.8</min>
            <max>1.8</max>
        </gearHealthRange>
        <apparelMoney>
            <min>500</min>
            <max>700</max>
        </apparelMoney>
        <weaponMoney>
            <min>150</min>
            <max>250</max>
        </weaponMoney>
        <weaponTags>
      		<li>NeolithicRangedBasic</li>
      		<li>NeolithicRangedDecent</li>
            <li>MedievalRanged</li>
        </weaponTags>
		<disallowedTraits>
			<li>Brawler</li>
		</disallowedTraits>
		<initialWillRange>2~4</initialWillRange>
		<initialResistanceRange>14~22</initialResistanceRange>
    </PawnKindDef>

    <!-- High-tier - knight, lord -->
    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Knight</defName>
        <label>drow knight</label>
        <combatPower>95</combatPower>
        <itemQuality>Good</itemQuality>
        <apparelMoney>
            <min>1000</min>
            <max>1600</max>
        </apparelMoney>
        <apparelTags>
			<li>MedievalMilitary</li>
			<li>MedievalArmorDecent</li>
			<li>MedievalArmorElite</li>
        </apparelTags>
        <weaponMoney>
            <min>300</min>
            <max>300</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
            <li>MedievalMeleeAdvanced</li>
        </weaponTags>
		<initialWillRange>2~4</initialWillRange>
		<initialResistanceRange>17~25</initialResistanceRange>
    </PawnKindDef>

    <PawnKindDef ParentName="DrowPawnKindBase">
        <defName>PF2_DrowFaction_Matriarch</defName>
        <label>drow matriarch</label>
        <labelFemale>drow queen</labelFemale>
        <combatPower>135</combatPower>
        <baseRecruitDifficulty>0.90</baseRecruitDifficulty>
        <minGenerationAge>150</minGenerationAge>
        <maxGenerationAge>999</maxGenerationAge>
        <itemQuality>Good</itemQuality>
        <factionLeader>true</factionLeader>
        <apparelMoney>
            <min>1600</min>
            <max>3000</max>
        </apparelMoney>
        <apparelTags>
			<li>MedievalApparelNoble</li>
        </apparelTags>
        <weaponMoney>
            <min>500</min>
            <max>700</max>
        </weaponMoney>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
            <li>MedievalMeleeAdvanced</li>
        </weaponTags>
		<initialWillRange>3~5</initialWillRange>
		<initialResistanceRange>20~30</initialResistanceRange>
    </PawnKindDef>

</Defs>