<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
	<HediffDef ParentName="InfectionBase">
		<defName>AnadiVenom</defName>
		<label>anadi venom</label>
		<description>The after-effects from an anadi bite. It begins with dizziness, nausea and weak pain, but gets progressively more severe if not treated. At late stages, it slows blood filtration, weakens consciousness, and cause debilitating pain.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<makesSickThought>true</makesSickThought>
		<lethalSeverity>0.9</lethalSeverity>
		<tendable>true</tendable>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>12</baseTendDurationHours>
				<severityPerDayTended>-0.132</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.3702</severityPerDayNotImmune>
				<immunityPerDaySick>0.3145</immunityPerDaySick>
				<severityPerDayImmune>-0.7297</severityPerDayImmune>
				<immunityPerDayNotSick>-0.03</immunityPerDayNotSick>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<minSeverity>0</minSeverity>
				<vomitMtbDays>1.0</vomitMtbDays>
				<restFallFactorOffset>1</restFallFactorOffset>
				<painOffset>0.009</painOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.666</minSeverity>
				<vomitMtbDays>5</vomitMtbDays>
				<restFallFactorOffset>1.20</restFallFactorOffset>
				<painOffset>0.03</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>-0.3</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>-0.3</postFactor>
					</li>
				</capMods>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.833</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<restFallFactorOffset>1.30</restFallFactorOffset>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.08</painOffset>
				<capMods>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.6</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<postFactor>-0.6</postFactor>
					</li>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>-0.6</postFactor>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
</Defs>