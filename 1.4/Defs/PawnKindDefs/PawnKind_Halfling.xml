		<race>PF2_Halfling</race>
		<defaultFactionType>PF2_HalflingPlayerTribe</defaultFactionType>
		<chemicalAddictionChance>0.05</chemicalAddictionChance>
		<apparelTags>
			<li>Neolithic</li>
		</apparelTags>
		<apparelMoney>200~200</apparelMoney>
		<backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
		<techHediffsMoney>50~50</techHediffsMoney>
		<techHediffsTags>
			<li>Poor</li>
		</techHediffsTags>
		<techHediffsChance>0.02</techHediffsChance>
		<initialResistanceRange>9~15</initialResistanceRange>
	</PawnKindDef>

	<PawnKindDef ParentName="BasePlayerPawnKind">
		<defName>PF2_HalflingPeasant</defName>
		<label>halfling peasant</label>
		<race>PF2_Halfling</race>
		<defaultFactionType>PF2_HalflingPlayerFaction</defaultFactionType>
		<chemicalAddictionChance>0.05</chemicalAddictionChance>
		<apparelTags>
			<li>MedievalBasic</li>
			<li>Neolithic</li>
		</apparelTags>
		<apparelMoney>200~200</apparelMoney>
